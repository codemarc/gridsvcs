      "helmet": "^7.1.0",
      "lodash": "^4.17.21",
      "openai": "^4.52.7",
      "swagger-jsdoc": "^6.2.8",
      "swagger-ui-express": "^5.0.1",
      "winston": "^3.13.1",
      "winston-daily-rotate-file": "^5.0.0"
